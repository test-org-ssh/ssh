<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="true"/>
	<constant name="struts.objectFactory" value="spring" />
	<!-- 静态资源映射 -->
	<constant name="struts.action.excludePattern" value="/static/.*?" />
	<package name="001pck" extends="struts-default">
		<action name="Index" class="myTestAction">
			<result name="success">/WEB-INF/web/home.jsp</result>
		</action>
		<action name="*LoginAction" class="loginAction" method="{1}execute">
			<result name="getsuccess">/WEB-INF/web/login.jsp</result>
			<result name="postsuccess"></result>
		</action>
		<action name="*RegisterAction" class="registerAction" method="{1}execute">
			<result name="getsuccess">/WEB-INF/web/register.jsp</result>
			<result name="postsuccess">/WEB-INF/web/login.jsp</result>
		</action>
	
		<action name="*MyselfAction" class="myselfAction" method="{1}execute">
			<result name="getsuccess">/WEB-INF/web/myself.jsp</result>
			<result name="postsuccess"></result>
		</action>
		<action name="FilmListAction" class="FilmListAction" method="execute">
			<result name="success">/WEB-INF/web/film_list.jsp</result>
			
		</action>
		<action name="FilmDetailAction" class="FilmDetailAction" method="execute">
			<result name="success">/WEB-INF/web/film_detail.jsp</result>
			
		</action>
		<action name="NoteDetailAction" class="NoteDetailAction" method="execute">
			<result name="success">/WEB-INF/web/noteDetail.jsp</result>
			
		</action>
	</package>
</struts>